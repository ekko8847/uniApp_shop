<view class="card"><swiper class="cardSwiper" indicator-dots="{{true}}" autoplay="{{true}}" interval="{{3000}}" duration="{{1000}}"><block wx:for="{{currentCardData.category.bannerUrlList}}" wx:for-item="banner" wx:for-index="index" wx:key="index"><swiper-item><view class="swiper-item"><image class="swiperImg" src="{{banner}}"></image></view></swiper-item></block></swiper><view class="cardTitle">{{currentCardData.category.name}}</view><view class="cardText">{{currentCardData.category.frontName}}</view><view class="goodsList"><block wx:for="{{currentCardData.itemList}}" wx:for-item="goods" wx:for-index="index" wx:key="id"><view data-event-opts="{{[['tap',[['toDetail',['$0'],[[['currentCardData.itemList','id',goods.id]]]]]]]}}" class="goodsItem" bindtap="__e"><image class="goodsImg" src="{{goods.primaryPicUrl}}"></image><text class="goodsName">{{goods.name}}</text><text class="goodsPrice">{{goods.counterPrice}}</text></view></block></view></view>