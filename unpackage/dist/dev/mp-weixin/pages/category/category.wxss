  background-color: #aaa;
  font-size: 28rpx;
  text-align: center;
  line-height: 60rpx;
}
.categroyContainer .main {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
}
.categroyContainer .main .mainLeft {
  width: 150rpx;
}
