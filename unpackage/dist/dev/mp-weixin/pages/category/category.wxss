  width: 100%;
  height: 80rpx;
  text-align: center;
  line-height: 80rpx;
  font-size: 28rpx;
}
.categroyContainer .main .mainLeft .leftItem.active {
  background-color: #87ceeb;
  border-bottom: 1px solid #f00;
